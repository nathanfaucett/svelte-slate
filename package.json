{
	"name": "svelte-slate",
	"description": "slate svelte view layer",
	"version": "0.1.83",
	"license": "(MIT OR Apache-2.0)",
	"type": "module",
	"author": "Nathan Faucett",
	"repository": {
		"type": "git",
		"url": "https://github.com/nathanfaucett/svelte-slate"
	},
	"homepage": "https://github.com/nathanfaucett/svelte-slate#readme",
	"keywords": [
		"svelte",
		"slate",
		"editor",
		"text",
		"rich"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"module": "./dist/index.js",
	"main": "./dist/index.js",
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./plugins": {
			"types": "./dist/plugins/index.d.ts",
			"svelte": "./dist/plugins/index.js",
			"default": "./dist/plugins/index.js"
		}
	},
	"scripts": {
		"svelte-kit": "svelte-kit",
		"vite": "vite",
		"start": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"clean": "rm -rf node_modules/.vite .svelte-kit package build",
		"prepublishOnly": "svelte-package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"postinstall": "svelte-kit sync"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "3",
		"@sveltejs/kit": "2",
		"@sveltejs/package": "2",
		"@types/katex": "0",
		"@types/node": "20",
		"@types/prismjs": "1",
		"@typescript-eslint/eslint-plugin": "6",
		"@typescript-eslint/parser": "6",
		"eslint": "8",
		"eslint-config-prettier": "9",
		"eslint-plugin-svelte3": "4",
		"katex": "0",
		"lorem-ipsum": "2",
		"prettier": "3",
		"prettier-plugin-svelte": "3",
		"prismjs": "1",
		"slate": "0",
		"slate-history": "0",
		"svelte": "4",
		"svelte-check": "3",
		"svelte-icons": "2",
		"svelte-portal": "2",
		"svelte-preprocess": "5",
		"svelte2tsx": "0",
		"tslib": "2",
		"typescript": "5",
		"vite": "5"
	},
	"peerDependencies": {
		"katex": "0",
		"prismjs": "1",
		"slate": "0",
		"svelte": ">=3",
		"svelte-icons": "2",
		"tslib": "2"
	},
	"dependencies": {
		"@aicacia/debounce": "0",
		"@svelte-put/clickoutside": "3",
		"fast-equals": "5",
		"scroll-into-view-if-needed": "3"
	}
}
